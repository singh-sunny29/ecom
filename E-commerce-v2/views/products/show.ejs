<%- include("../partials/header")%>
<%- include("../partials/navbar")%>


<div class="container">
 
    <div class="row" >
        <div class="col col-lg-6">
            <div class="card m-5 text-center " style="width: 22rem; height:500px;">
                <img src="<%=product.img%>" class="card-img-top p-1 " style= "height:250px; " >
                <div class="card-body">
                  <h5 class="card-title"><%=product.name%></h5>
                  <h3 class="card-title">Rs.<%=product.price%></h3>
                  <p class="card-text"><%=product.desc.substring(0,30)%>...</p>
                  <a href="#" class="btn btn-success">BUY</a>
                  <a href="/products/<%=product._id%>/edit" class="btn btn-secondary">EDIT</a>
                <form action="/products/<%=product._id%>?_method=DELETE" method="POST">
                    <button  class="btn btn-danger m-1">DELETE</button>
                </form>
                </div>
            </div>
            
        </div>
        <div class="col col-lg-6">
            <h1 style="margin-top: 40px;">Review</h1>

            <form class="needs-validation" action="/products/<%=product._id%>/review" method="POST" novalidate >
                <div class="container mt-4" >
                  <div class="mb-3" style="width:400px;">
                      <label for="rating" class="form-label"></label>
                      <input type="range" class="form-range" min="0" max="5" name="rating" id="rating">
                  </div>
                  <div class="mb-3" style="width: 50vw;">
                      <label for="comment" class="form-label">Comment</label>
                      <textarea class="form-control" name="comment" id="comment" cols="40" rows="3" style="width: 400px;"  required></textarea>
                      <div class="invalid-feedback">
                        Add some description.
                      </div>
                    </div>
                  <button type="submit" class="btn btn-success" >Submit</button>
                </div> 

              </form>
              <div class="mb-3 mt-3">
                <%for(let review of product.reviews){%>
                    <div class="card mb-3">
                        <div class="card-header">
                          User
                        </div>
                        <div class="card-body">
                          <h5 class="card-title">Rating :<%=review.rating%></h5>
                          <p class="card-text">Comment :<%=review.comment%></p>
                        </div>
                      </div>
    
                <%}%>
            </div>
        </div>
    </div>
</div>




<%- include("../partials/footer")%>