<%- include("../partials/header")%>
<%- include("../partials/navbar")%>
<link rel="stylesheet" href="/CSS/star.css">


<div class="container" style="margin-top: 3rem;">
  <%-include("../partials/flash")%>
    <div class="row" >
        <div class="col col-lg-6">
            <div class="card m-5 text-center " style="width: 20rem; height:70vh;">
                <img src="<%=product.img%>" class="card-img-top p-1 " style= "height:50%; " >
                <div class="card-body">
                  <h5 class="card-title"><%=product.name%></h5>
                  <h3 class="card-title">Rs.<%=product.price%></h3>
                  <p class="card-text"><%=product.desc.substring(0,30)%>...</p>
                  <%if(!currentUser || currentUser.info=='user'){%>
                  <form action="/user/<%=product._id%>/cart" method="POST">
                    <div class="card-body">
                      <button class="btn btn-outline-success">ADD TO CART</button>
                    </div>
                  </form>
                  
                  
                  <a href="#" class="btn btn-success">BUY</a>
                  <%}else if(currentUser.info=='seller' && product.seller._id==currentUser._id){%>
                  <a href="/products/<%=product._id%>/edit" class="btn btn-secondary">EDIT</a>
                  <form action="/products/<%=product._id%>?_method=DELETE" method="POST">
                    <button  class="btn btn-danger m-1">DELETE</button>
                  </form>
                 <%}%>
                </div>
            </div>
            
        </div>
        <div class="col col-lg-6">
            <h1 style="margin-top: 40px;">Leave a Review</h1>

            <form class="needs-validation" action="/products/<%=product._id%>/review" method="POST" style="max-width:70%;"novalidate >
                <div class="container mt-3 p-1" >
                  <fieldset class="starability-basic">
                    
                    <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="rating" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="rating" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="rating" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="rating" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="rating" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                  </fieldset>
                  <div class="mb-3" style="width: 50vw;">
                      <label for="comment" class="form-label">Comment</label>
                      <textarea class="form-control" name="comment" id="comment" cols="35" rows="3" style="width: 400px;"  required></textarea>
                      <div class="invalid-feedback">
                        Add some description.
                      </div>
                    </div>
                  <button type="submit" class="btn btn-success" >Submit</button>
                </div> 

              </form>
              <div class="mb-3 mt-3">
                <%for(let review of product.reviews){%>
                    <div class="card mb-3">
                        <div class="card-body">
                          <p class="starability-result" data-rating="<%=review.rating%>">
                          Rated: <%=review.rating%> stars
                          </p>
                          <p class="card-text text-capitalize" style="color: gray;"><strong>By <%=review.user%></strong></p>
                          <p class="card-text text-capitalize"><strong>Comment </strong>:<%=review.comment%></p>
                        </div>
                      </div>
    
                <%}%>
            </div>
        </div>
    </div>
</div>




<%- include("../partials/footer")%>