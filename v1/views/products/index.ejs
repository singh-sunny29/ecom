<%- include("../partials/header")%>
<%- include("../partials/navbar")%>

<h1 class="display-3">Landing page</h1>
 
<div class="container">
    
    <div class="row">
        <%for(let item of products){%>
            <div class="col col-lg-3">
                <div class="card m-5 text-center " style="width: 14rem; height:450px;">
                    <img src="<%=item.img%>" class="card-img-top p-1 " style= "height:200px; " >
                    <div class="card-body">
                      <h5 class="card-title"><%=item.name%></h5>
                      <h3 class="card-title">Rs.<%=item.price%></h3>
                      <p class="card-text"><%=item.desc.substring(0,30)%>...</p>
                      <a href="products/<%=item._id%>" class="btn btn-primary">view info</a>
                    </div>
                </div>
            </div>
        <%}%>
    </div>
      
       
  </div>
    
<%- include("../partials/footer")%>
