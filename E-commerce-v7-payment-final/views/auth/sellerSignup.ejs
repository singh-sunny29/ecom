<%- include("../partials/header")%>
<%- include("../partials/navbar")%>

<div class="container" >
    <div class="row">
      <div class="col col-lg-6 col-md-8 lol-sm-18 " id="login-form">
        <form class="needs-validation" action="/sellerregister" method="POST" novalidate>
          <%- include("../partials/flash")%>
          <h4 class="display-5 login-head">SignUp</h4>

          <div class="row mt-3">
            <div class="login mb-3 col-lg-6" >
              <label for="firstname" class="form-label">Firstname</label>
              <input type="text" class="form-control" id="firstname" placeholder="Firstname" name="firstname" required>
              <div class="invalid-feedback">
                This field is required.
              </div>
            </div>
    
            <div class="login mb-3 col-lg-6" >
             <label for="lastname" class="form-label">Lastname</label>
             <input type="text" class="form-control" id="lastname" placeholder="Lastname" name="lastname" required>
              <div class="invalid-feedback">
              This field is required.
              </div>
            </div>
        </div>

          <div class="login mb-3" >
            <label for="username" class="form-label">Username</label>
            <input type="text" class="form-control" id="username" placeholder="username" name="username" required>
            <div class="invalid-feedback">
              username is required to verify you
            </div>
          </div>
          <div class="login mb-3">
              <label for="email" class="form-label">Email</label>
              <input type="email" class="form-control" id="email" placeholder="email" name="email" required>
              <div class="invalid-feedback">
                You must give an email.
              </div>
          </div>
          <div class="login mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" placeholder="Password" name="password" required>
            <div class="invalid-feedback">
              Can't leave this field empty.
            </div>
          </div>

          <div class="login mb-3">
            <label for="address" class="form-label">Address</label>
            <input type="text" class="form-control" id="address" placeholder="Address" name="address" required>
            <div class="invalid-feedback">
              Can't leave this field empty.
            </div>
          </div>
          
          <div class="row mt-3">
            <div class="login mb-3 col-lg-6" >
              <label for="state" class="form-label">State</label>
              <input type="text" class="form-control" id="state" placeholder="State" name="state" required>
              <div class="invalid-feedback">
                This field is required.
              </div>
            </div>
    
            <div class="login mb-3 col-lg-6" >
             <label for="pincode" class="form-label">Pincode</label>
             <input type="number" class="form-control" id="pincode" placeholder="Pincode" name="pincode" required>
              <div class="invalid-feedback">
              This field is required.
              </div>
            </div>
        </div>

          <div class="login-btn">
            <button type="submit" class="btn btn-primary" >SignUp</button>
          </div>
      </form>
      <div class="atag">
        <a href="/register" style="text-decoration: none;">SignUp as user</a>
      </div>
      </div>
    </div>
</div>


<%- include("../partials/footer")%>